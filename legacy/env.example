# Configuration pour l'intégration 2FA avec Symfony
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Clé secrète partagée entre le legacy et Symfony pour l'authentification SSO
# Doit correspondre à la variable SSO_SHARED_SECRET dans le .env de Symfony
SSO_SHARED_SECRET=CHANGE_ME_IN_PRODUCTION_a_super_secret_key_12345

# URL de base de l'application Symfony
# En développement : http://apache:80
# En production : https://votre-domaine.com
SYMFONY_BASE_URL=http://apache:80

# Timeout pour les appels HTTP vers Symfony (en secondes)
SYMFONY_HTTP_TIMEOUT=5

# Activer/désactiver l'intégration 2FA
# true = activé, false = désactivé (utilise uniquement le legacy)
TWO_FACTOR_ENABLED=true

# Mode debug pour les logs détaillés
# true = logs détaillés, false = logs normaux
TWO_FACTOR_DEBUG=false 
